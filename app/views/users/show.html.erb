 <% provide(:title, @user.name) %>
<div class="row">
  <aside class="col-md-3">
    <section class="user_info">
      <h1>
        <%#= gravatar_for @user %>
        <%= @user.name %>
      </h1>
    </section>
    <section class="stats">
      <%= render 'shared/stats' %>
  <br><%= render 'follow_form' if logged_in? %>
    </section>


  </aside>
  <div class="col-md-1">
  </div>
    <div class="col-md-4">
    <% if @user.microposts.any? %>
      <h4>Recommendations (<%= @user.microposts.count %>)</h4>
      <div class="microposts">
        <%= render @microposts %>
      </div>
      <%= will_paginate @microposts %>
    <% end %>
  </div>
  <div class="col-md-4">
    <% if @saved_items.any? %>
      <h4>Saved items (<%= @saved_items.count %>)</h4>
      <div class="saved-items">
        <% @array_of_saved_spots.each do |spot| %>
          <%= spot.name %><br><br>
        <% end %>
      </div>
      <%#= will_paginate @saved_items %>
    <% end %>
  </div>

</div>
