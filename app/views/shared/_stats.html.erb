<% @user ||= current_user %>
<div class="stats">
  <a href="<%= following_user_path(@user) %>" class="following">
    <strong class="following">
      <%= @user.following.count %>
    </strong>
    following
  </a>
  <a href="<%= followers_user_path(@user) %>" class="followers">
    <strong class="followers">
      <%= @user.followers.count %>
    </strong>
    followers
  </a>
</div>
